. /lib/svc/share/smf_include.sh

if [ -z "$SMF_FMRI" ]; then
        echo "this script can only be invoked by smf(5)"
        exit $SMF_EXIT_ERR_NOSMF
fi

smf_configure_ip || exit $SMF_EXIT_ERR_FATAL

if /lib/inet/in.mpathd; then
        exit $SMF_EXIT_OK
else
        exit $SMF_EXIT_ERR_FATAL
fi
