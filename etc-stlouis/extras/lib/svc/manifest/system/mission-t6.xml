<?xml version='1.0'?>
<!DOCTYPE service_bundle SYSTEM '/usr/share/lib/xml/dtd/service_bundle.dtd.1'>
<service_bundle type='manifest' name='export'>
  <service name='system/mission-t6' type='service' version='1'>
    <create_default_instance enabled='true'/>

    <dependency name='usr' grouping='require_all' restart_on='none'
        type='service'>
      <service_fmri value='svc:/system/filesystem/minimal'/>
    </dependency>
    <dependency name='devices' grouping='require_all' restart_on='none'
        type='service'>
      <service_fmri value='svc:/system/hotplug'/>
    </dependency>
    <dependency name='devices' grouping='require_all' restart_on='none'
        type='service'>
      <service_fmri value='svc:/milestone/devices'/>
    </dependency>

    <!-- XXX(cross): This creates a dependency cycle.
	    We need a better dependency target and to do
	    a complete audit of the service graph.
    <dependent name='t6-mission-network-physical' restart_on='none'
        grouping='require_all'>
      <service_fmri value='svc:/network/physical'/>
    </dependent>
    -->

    <exec_method name='start' type='method' timeout_seconds='60'
        exec='/lib/svc/method/mission-t6 %m'/>
    <exec_method name='stop' type='method' timeout_seconds='60'
        exec='/lib/svc/method/mission-t6 %m'/>

    <property_group name='startd' type='framework'>
      <propval name='duration' type='astring' value='transient'/>
    </property_group>

    <stability value='Unstable'/>

    <template>
      <common_name>
        <loctext xml:lang='C'>set t6 into mission mode</loctext>
      </common_name>
    </template>
  </service>
</service_bundle>
